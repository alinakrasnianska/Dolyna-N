   overflow hidden
   transition .8s


.login_fields_con
   sizer(87.5%,15.16%)
   flexer(e,s,cn)
   position: relative;

.dynamicInput
   transition .6s
   sizer(100%, 68%)
   outline none
   border-top none
   border-left none
   border-right none
   border-bottom solid 2px #D9D9D9
   box-sizing border-box
   fonter(650, 1.5rem, 1.6rem)
   padding-left .5vh
   &::placeholder
      opacity 0
   &:focus
      ~ .dynamicLabel
         color y
   &:not(:placeholder-shown)
      ~ .dynamicLabel
         fonter(650, 1rem, 1.3rem)
         opacity 60%
         top 0
.dynamicLabel 
   user-select none
   transition .2s
   position absolute
   top 4.5vh
   left .5vh
   fonter(650, 1.5rem, 1.6rem)

.register_fields
