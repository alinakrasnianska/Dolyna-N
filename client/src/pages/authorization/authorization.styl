@import '../../modules/basic'


.login_con
   sizer(99.6vw,96.2vh)
   flexer(s,c,cn)
   overflow: hidden
.auth_con
   sizer(100%,100%)  
   flexer(s,c,cn)
   overflow: hidden



.login_title
   fonter(650,2.813rem,4.88vh)
   margin: 6.9vh 0 
   transition: .6s
.login
   sizer(44.44vw,63.7vh)
   border 1px solid #D9D9D9
   border-radius 1.46vh
   box-shadow: 0.247vw 0.39vh 1.38vw rgba(0, 0, 0, 0.164)
