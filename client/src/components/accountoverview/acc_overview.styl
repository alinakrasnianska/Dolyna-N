         .last_req_img_con
            sizer(18.65vh,18.65vh)
            .last_req_img
               width 100%
         .last_req_text
            margin-top 4%
            flexer(c,c,cn)
            gap .7vh
            fonter(sbold,1.11rem,1.3rem)

