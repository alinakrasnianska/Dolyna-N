@import '../../modules/basic'

.lang_mark
   color y 
   position: absolute
   fonter(650, 1.33rem, 1.4rem)
   top 3.5vh
   right: 2vw
.add_cereals-block
   width 88.888vw
   box-sizing border-box
   padding 4.1992vh 0 0 4.72222vw
   flexer(s,s,cn) 
   gap 1.66vh
.main_con
   flexer(s,c,rn)
   width: 100%
   gap 2%
.add_cereals-main
   position relative
   sizer(50%,63.7695vh)
   max-width: 44vw
   min-width 50%
   box-shadow: 0.247vw 0.39vh 1.38vw rgba(0, 0, 0, 0.164)
   border-radius 1.46vh
   box-sizing border-box
   border 1px solid #D9D9D9
   padding 4.78515625vh 2.43vw 7.5vh 2.43vw   
   flexer(s,c,cn)    
   gap 4.98vh
.add_cereals-title
   fonter(sbold,2.222rem,2.3rem)
   margin-left 3.125vw
.admin_fields_con
   sizer(100%,9.765625vh)
   flexer(e,s,cn)
   position: relative;
.adminInput
   transition .6s
   sizer(100%, 68%)
   outline none
   border-top none
   border-left none
   border-right none
   border-bottom solid 2px #D9D9D9
   box-sizing border-box
   fonter(650, 1.33rem, 1.4rem)
   padding-left .5vh
   &::placeholder
      opacity 0
   &:focus
      ~ .adminLabel
         color y
   &:not(:placeholder-shown)
      ~ .adminLabel
         fonter(650, 1rem, 1.3rem)
         opacity 60%
         top 0
.adminLabel 
   user-select none
   transition .2s
   position absolute
   top 4.8vh
   left .5vh
   fonter(650, 1.33rem, 1.4rem)

.addImg_cereal_con
   width 100%
   flexer(c,c,rn)
.img_input
   display none
.adminLabel_accept
   sizer(38.8vw,6.64vh)
   overflow: hidden
   flexer(c,c,rn)
   cursor pointer
   background: #FFB75E
   color white
   border-radius: 0.97vh
   transition .5s
   fonter(sbold,.98rem,1.4rem)
   &:hover
      background: black 
.adminLabel_accepted
   cursor pointer
   sizer(38.8vw,6.64vh)
   overflow: hidden
   padding-left: 2vw
   box-sizing: border-box
   flexer(s,c,rn)
   background: black 
   color white
   border-radius: 0.97vh
   transition .5s
   fonter(sbold,.98rem,1.4rem)
   &:hover
      background: white 
      color black

.admin_buttons_block
   sizer(100%,6.64vh)
   flexer(s,c,rn)
   gap 0.97vw
   margin-top 2.91vh

.admin_buttons
   sizer(17.847vw,100%)
   outline: none
   box-sizing: border-box
   border 2px solid #D9D9D9
   fonter(sbold,1.11rem,1.2rem)
   border-radius: 0.97vh
.admin_clear_cereal
   background: white 
   transition: .5s
   &:hover 
      background: rgba(136, 136, 136, 0.68)
      width 30vw
.admin_add_cereal
   background: #2A2C34
   color white
   transition: .5s
   &:hover 
      background: rgba(42, 44, 52, 0.68)
      width 50vw
      

.admin_alert
   color red 
   fonter(sbold,1rem,1rem)

.description_counter
   position: absolute
   right 0
   top 2vh
   fonter(sbold,1rem,1.2rem) 
   color y
.description_counter_zero
   position: absolute
   right 0
   top 2vh
   fonter(sbold,1rem,1.2rem) 